<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">


    <FrameLayout
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_marginTop="59dp"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtNombreProducto"

            android:paddingLeft="1dp"
            android:paddingRight="10dp"
            android:paddingStart="1dp"
            android:paddingEnd="1dp"
            android:maxLines="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/txtNombreProducto"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">


            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtCantidadProducto"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                android:layout_alignBaseline="@+id/btnCantidadMas"
                android:layout_alignBottom="@+id/btnCantidadMas"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="65dp"
                android:layout_marginStart="65dp" />

            <Button

                android:id="@+id/btnCantidadMas"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/txtCantidadProducto"
                android:layout_toEndOf="@+id/txtCantidadProducto"
                android:layout_width="50dp" />

            <Button
                android:layout_height="match_parent"
                android:id="@+id/btnCantidadMenos"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/btnCantidadMas"
                android:layout_toEndOf="@+id/btnCantidadMas"
                android:layout_width="50dp" />

            <TextView

                android:layout_height="wrap_content"
                android:id="@+id/txtPrecioProducto"
                android:layout_alignBaseline="@+id/btnBorrarProducto"
                android:layout_alignBottom="@+id/btnBorrarProducto"
                android:layout_toLeftOf="@+id/btnBorrarProducto"
                android:layout_toStartOf="@+id/btnBorrarProducto"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                android:layout_width="60dp" />

            <Button
                android:layout_height="match_parent"
                android:id="@+id/btnBorrarProducto"
                android:layout_width="80dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>