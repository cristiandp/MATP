    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:background="@drawable/roundedborders"
        android:paddingLeft="10dp"
        android:id="@+id/edTxtsaldoFinal"
        android:hint="Saldo final"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Billetes y monedas"
        android:id="@+id/btnByM"
        />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/lyByM"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:id="@+id/edTxtCant001"
                android:layout_weight="1"/>

            <TextView
                android:text="* 0.01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:id="@+id/edTxtCant002"
                android:layout_weight="1"/>

            <TextView
                android:text="* 0.02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:id="@+id/edTxtCant005"
                android:layout_weight="1" />

            <TextView
                android:text="* 0.05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/edTxtCant010"
                android:inputType="numberDecimal"
                android:layout_weight="1" />

            <TextView
                android:text="* 0.10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/edTxtCant020"
                android:inputType="numberDecimal"
                android:layout_weight="1" />

            <TextView
                android:text="* 0.20"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/edTxtCant050"
                android:inputType="numberDecimal"
                android:layout_weight="1" />

            <TextView
                android:text="* 0.50"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/edTxtCant1"
                android:inputType="numberDecimal"
                android:layout_weight="1" />

            <TextView
                android:text="* 1.00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/edTxtCant2"
                android:inputType="numberDecimal"
                android:layout_weight="1" />

            <TextView
                android:text="* 2.00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/edTxtCant5"
                android:inputType="numberDecimal"
                android:layout_weight="1" />

            <TextView
                android:text="* 5.00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/edTxtCant10"
                android:inputType="numberDecimal"
                android:layout_weight="1"
                />

            <TextView
                android:text="* 10.00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/edTxtCant20"
                android:inputType="numberDecimal"
                android:layout_weight="1"
                />

            <TextView
                android:text="* 20.00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/edTxtCant50"
                android:inputType="numberDecimal"
                android:layout_weight="1"
                />

            <TextView
                android:text="* 50.00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:id="@+id/edTxtCant100" />

            <TextView
                android:text="* 100.00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/textView12" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:id="@+id/edTxtCant200" />

            <TextView
                android:text="* 200.00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/textView11" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:id="@+id/edTxtCant500"
                />

            <TextView
                android:text="* 500.00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

        </LinearLayout>

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cerrar caja"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:text="&lt;"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtFechaActual"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:text="&gt;"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jornada: 10:00 \n Total tickets: 32 \n Saldo inicial: 1200€ \n Saldo final: 2500 \n Descuadre: 0 \n Comentarios: \n\n**10:00** Caja abierta con 1200€ \n 5x5 4x10  6x20 7x50 3x100 1x500 \n\n**14:00** Caja cerrada con 2500 \n 5x5 4x10 6x20 27x50 4x100 1x200 1x500"/>

        </LinearLayout>

</LinearLayout>