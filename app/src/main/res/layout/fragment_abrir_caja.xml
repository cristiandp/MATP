<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtFechayHora"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginBottom="30dp"/>


        <EditText
            android:background="@drawable/roundedborders"
            android:layout_below="@id/txtFechayHora"
            android:id="@+id/edTxtSaldoInicial"
            android:inputType="numberDecimal"
            android:ems="10"
            android:hint="Saldo inicial"
            android:imeOptions="actionDone"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp" />



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edTxtSaldoInicial"
        android:id="@+id/lyByM"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:id="@+id/edTxtCant001"
                android:layout_weight="1"/>

            <TextView
                android:text="* 0.01"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:id="@+id/edTxtCant002"
                android:layout_weight="1"/>

            <TextView
                android:text="* 0.02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:id="@+id/edTxtCant005"
                android:layout_weight="1" />

            <TextView
                android:text="* 0.05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/edTxtCant010"
                android:inputType="numberDecimal"
                android:imeOptions="actionDone"
                android:layout_weight="1" />

            <TextView
                android:text="* 0.10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/edTxtCant020"
                android:inputType="numberDecimal"
                android:imeOptions="actionDone"
                android:layout_weight="1" />

            <TextView
                android:text="* 0.20"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/edTxtCant050"
                android:inputType="numberDecimal"
                android:imeOptions="actionDone"
                android:layout_weight="1" />

            <TextView
                android:text="* 0.50"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/edTxtCant1"
                android:inputType="numberDecimal"
                android:imeOptions="actionDone"
                android:layout_weight="1" />

            <TextView
                android:text="* 1.00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/edTxtCant2"
                android:inputType="numberDecimal"
                android:imeOptions="actionDone"
                android:layout_weight="1" />

            <TextView
                android:text="* 2.00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/edTxtCant5"
                android:inputType="numberDecimal"
                android:imeOptions="actionDone"
                android:layout_weight="1" />

            <TextView
                android:text="* 5.00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/edTxtCant10"
                android:inputType="numberDecimal"
                android:imeOptions="actionDone"
                android:layout_weight="1"
                />

            <TextView
                android:text="* 10.00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/edTxtCant20"
                android:inputType="numberDecimal"
                android:imeOptions="actionDone"
                android:layout_weight="1"
                />

            <TextView
                android:text="* 20.00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/edTxtCant50"
                android:inputType="numberDecimal"
                android:imeOptions="actionDone"
                android:layout_weight="1"
                />

            <TextView
                android:text="* 50.00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:imeOptions="actionDone"
                android:id="@+id/edTxtCant100" />

            <TextView
                android:text="* 100.00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/textView12" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:imeOptions="actionDone"
                android:id="@+id/edTxtCant200" />

            <TextView
                android:text="* 200.00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/textView11" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:imeOptions="actionDone"
                android:id="@+id/edTxtCant500"
                />

            <TextView
                android:text="* 500.00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

        </LinearLayout>

    </LinearLayout>

